---
// IconCard.astro
export interface Props {
    title: string;
    description: string;
    icon: string;
}

const { title, description, icon } = Astro.props;

// Simple icon mapping
const iconMap = {
    pen: "✏️",
    star: "⭐",
    heart: "❤️",
    check: "✅",
    rocket: "🚀",
    shield: "🛡️",
    code: "💻",
    book: "📚",
    users: "👥",
};

const iconDisplay = iconMap[icon] || icon;
---

<div
    class="p-6 bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow"
>
    <div class="text-3xl mb-3" aria-hidden="true">
        {iconDisplay}
    </div>

    <h3 class="text-xl font-semibold text-gray-900 mb-2">
        {title}
    </h3>

    <p class="text-gray-600">
        {description}
    </p>
</div>
