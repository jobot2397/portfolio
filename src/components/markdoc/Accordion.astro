---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<details
    class="border-dashed border border-theme-primary rounded-2xl mb-4 bg-theme-primary bg-[radial-gradient(circle,#73737350_1px,transparent_1px)] bg-[size:20px_20px]"
>
    <summary
        class="px-5 py-3 cursor-pointer hover:bg-theme-secondary font-medium text-theme-secondary select-none transition-colors duration-300 rounded-2xl [details[open]_&]:rounded-t-2xl [details[open]_&]:rounded-b-none"
    >
        {title}
    </summary>
    <div
        class="px-5 pb-4 pt-2 border-t border-dashed border-theme-primary text-theme-primary"
    >
        <slot />
    </div>
</details>
