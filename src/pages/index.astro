---
import "../styles/global.css";
import Base from "../components/Base.astro";
import { Image } from "astro:assets";
import profileLaptop from "../assets/profileLaptop.png";
---

<!doctype html>
<html lang="en" class="hide-scrollbar">
    <head>
        <Base />
    </head>
    <body class="bg-gray-800">
        <div
            class="h-screen w-screen flex flex-col gap-4 items-center justify-center"
        >
            <div class="rounded-full h-fit w-fit overflow-auto">
                <Image
                    src={profileLaptop}
                    width="250"
                    height="250"
                    alt="profile-laptop"
                />
            </div>
            <h1 class="font-semibold">Joseph Lawler</h1>
            <div class="flex flex-row gap-8">
                <a href="/blog">Blog</a>
                <a href="/blog">Portfolio</a>
                <a href="/docs">Docs</a>
                <a href="/about">About</a>
            </div>
        </div>
        <!-- Maybe do some cool splitter here and then have a brief section for blog portfolio and docs -->
        <div>HELLO</div>
    </body>
</html>
